# ===== AIRFLOW =====
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__BASE_LOG_FOLDER=/opt/airflow/logs
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__LOAD_DEFAULT_CONNECTIONS=False

# ===== AIRFLOW DATABASE =====
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://airflow:airflow@postgres:5432/airflow
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-change-in-production

# ===== AIRFLOW USERS =====
AIRFLOW_WEBSERVER_USERNAME=airflow
AIRFLOW_WEBSERVER_PASSWORD=airflow

# ===== POSTGRESQL =====
POSTGRES_URL=postgresql://airflow:airflow@postgres:5432
POSTGRES_DB=airflow
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow

# ===== REDIS =====
REDIS_URL=redis://redis:6379/0
REDIS_BROKER_URL=redis://redis:6379/1

# ===== MINIO (Local S3) =====
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=stormguard-datalake
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# ===== AWS (Production) =====
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=stormguard-prod

# ===== DATA SOURCES =====
NOAA_API_KEY=your-noaa-api-key
NASA_API_KEY=your-nasa-api-key

# ===== MLflow =====
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=stormguard

# ===== API =====
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_WORKERS=4

# ===== MONITORING =====
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# ===== LOGGING =====
LOG_LEVEL=INFO
